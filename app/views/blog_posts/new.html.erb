<div class="content">
    <h1>Create Post</h1>

    <%= form_with model: @post, local: true do |form| %>
      <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
      </div>
    
      <div>
        <%= form.label :description %><br>
        <%= form.text_field :description %>
      </div>
    
      <div>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
      </div>
    
      <div>
        <%= form.submit "Create post." %>
      </div>
    <% end %>
</div>