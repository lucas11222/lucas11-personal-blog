<div class="content">
  <h1>Edit Post</h1>

  <%= form_with model: @post, local: true do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :description %><br>
      <%= form.text_field :description %>
    </div>

    <div>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </div>

    <div>
      <%= form.submit "Save changes." %>
    </div>
  <% end %>
  <%= form_with url: blog_post_path(@post), method: :delete, local: true do %>
  <%= submit_tag "Delete post", data: { confirm: "Are you sure?" } %>
  <% end %>

</div>
